<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:id="@+id/parent">

    <TextView
        android:id="@+id/message_content"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:minHeight="48dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="This is a test! This is a test! This is a test! This is a test! This is a test! This is a test! This is a test!"
        android:background="#FFF"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        app:layout_constraintRight_toRightOf="@+id/parent"
        app:layout_constraintTop_toTopOf="@+id/parent"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>